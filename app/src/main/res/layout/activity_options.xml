<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="zm.shakethatphone.Options">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="33">

        <Button
            android:id="@+id/menu"
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="#228b22"
            android:textColor="#ffd700"
            android:text="@string/menu"
            android:textSize="32sp"/>

        <Button
            android:id="@+id/nothing"
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="#ffd700"
            android:textColor="#228b22"
            android:text="@string/nothing"
            android:textSize="48sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="33">

        <Button
            android:id="@+id/songTouches"
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="#ffd700"
            android:textColor="#228b22"
            android:text="@string/song_touches"
            android:textSize="32sp" />

        <Button
            android:id="@+id/musique"
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="#228b22"
            android:textColor="#ffd700"
            android:text="@string/musique"
            android:textSize="26sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="33">

        <Button
            android:id="@+id/evaluer"
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="#228b22"
            android:textColor="#ffd700"
            android:text="@string/evaluer"
            android:textSize="32sp" />

        <Button
            android:id="@+id/contacter"
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="#ffd700"
            android:textColor="#228b22"
            android:text="@string/contacter"
            android:textSize="32sp" />

    </LinearLayout>

</LinearLayout>
